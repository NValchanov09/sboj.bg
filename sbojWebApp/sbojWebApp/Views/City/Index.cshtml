@model X.PagedList.IPagedList<sbojWebApp.Models.City>
@using X.PagedList.Mvc.Core;

<div class="container mt-5">
    <!-- Create button -->
    <div class="row mb-3">
        <div class="col-md-12">
            <a href="@Url.Action("Create", "City")" class="btn btn-primary">Create New City</a>
        </div>
    </div>

    <!-- Bootstrap table to display cities -->
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var city in Model)
            {
                <tr>
                    <td>@city.Name</td>
                    <td>@city.Latitude</td>
                    <td>@city.Longitude</td>
                    <td>
                        <a href="@Url.Action("Details", "City", new { id = city.Id })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Edit", "City", new { id = city.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "City", new { id = city.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination controls -->
    <div class="d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
